<% if (messages && messages.length > 0) { %>
  <div class="alert alert-warning"><%= messages[0] %></div>
<% } %>

<!-- Update Account Info -->
<form method="POST" action="/account/edit" class="form-container">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

  <div class="form-group">
    <label for="firstName">First Name</label>
    <input type="text" id="accountFirstname" name="account_firstname" value="<%= accountData.account_firstname %>" required />
  </div>

  <div class="form-group">
    <label for="lastName">Last Name</label>
    <input type="text" id="lastName" name="account_lastname" value="<%= accountData.account_lastname %>" required />
  </div>

  <div class="form-group">
    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" value="<%= accountData.account_email %>" required />
  </div>

  <button type="submit" class="btn btn-primary">Update Account Info</button>
</form>

<hr />

<!-- Change Password -->
<form method="POST" action="/account/edit" class="form-container">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

  <div class="form-group">
    <label for="account_password">New Password</label>
    <input type="password" id="account_password" name="account_password" required />
  </div>

  <button type="submit" class="btn btn-secondary">Change Password</button>
</form>
